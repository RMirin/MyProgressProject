<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" >

    <data>

        <variable
                name="profItemBinding"
                type="com.example.domain.entity.ProfDataModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/item_prof_img"
                android:layout_width="@dimen/image_in_list_size"
                android:layout_height="@dimen/image_in_list_size"
                android:layout_margin="@dimen/spacing_normal"
                android:src="@{profItemBinding.imageUrl}"
                android:background="@android:color/holo_red_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/item_prof_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal"
                android:textSize="@dimen/font_huge"
                android:text="@{profItem.name}"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/item_prof_img"
                app:layout_constraintStart_toEndOf="@+id/item_prof_img"
                app:layout_constraintTop_toTopOf="@+id/item_prof_img"
                tools:text="Blacksmithing" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>